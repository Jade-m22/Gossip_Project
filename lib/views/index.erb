<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>The Gossip Project</title>
  </head>
  
  <body>
    <div class="container d-flex justify-content-center align-items-center" style="height: 20vh;">
      <div class="text-center">
        <h1>Bienvenue sur mon site de potins</h1>
        <a href="/gossips/new/" class="btn btn-primary">Cr√©er un potin</a>
      </div>
    </div>

    <div class="container mt-5">
      <% gossips.each_with_index do |gossip, index| %>
        <div class="border p-4 mb-4 rounded shadow-sm">
          <h3 class="fw-bold text-primary">Auteur : <%= gossip.author %></h3>
          <p class="fst-italic text-muted">Contenu : <%= gossip.content %></p>
          <a href="/gossips/<%= index + 1 %>" class="btn btn-info">Voir ce potin</a>
        </div>
      <% end %>
    </div>
  </body>
</html>


